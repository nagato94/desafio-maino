<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-header">
          <h1><%= @post.title %></h1>
        </div>
        <div class="card-body">
          <p><%= @post.body %></p>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          Add a Comment
        </div>
        <div class="card-body">
          <%= simple_form_for([@post, @post.comments.build], html: { class: 'form-horizontal' }) do |form| %>
            <% if user_signed_in? %>
              <p>Commenting as: <%= current_user.email %></p>
            <% else %>
              <p>Commenting as: Anonymous</p>
            <% end %>
            <%= form.input :body, required: true, as: :text, label: false, placeholder: 'Type your comment here...', input_html: { class: 'form-control' } %>

            <%= form.button :submit, 'Post Comment', class: 'btn btn-primary mt-2' %>
          <% end %>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-header">
          <h2>Comments:</h2>
        </div>
        <div class="card-body">
          <% @post.comments.each do |comment| %>
            <div class="comment mb-3">
              <strong><%= comment.user ? comment.user.email : 'Anonymous' %>:</strong>
              <p><%= comment.body %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
