<div class="container mt-5">
  <%= link_to 'Add New Post', new_post_path, class: "btn btn-primary mb-3" %>

  <%= paginate @posts %>

  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <h2><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h2>
        <p><%= post.body %></p>
        <p><small class="text-muted"><%= pluralize(post.comments.count, 'comment') %></small></p>
      </div>
    </div>
  <% end %>

  <%= paginate @posts %>
</div>
