<% posts.each do |post| %>
  <div class="card post-card mb-3">
    <div class="card-body">
      <h2 class="post-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h2>
      <p class="post-body"><%= post.body %></p>
      <p class="post-comments"><small class="text-muted"><%= pluralize(post.comments.count, 'comment') %></small></p>
    </div>
  </div>
<% end %>
