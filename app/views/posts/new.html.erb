<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card card-custom">
        <div class="card-header">
          <h1 class="text-center">
            <%= t("posts.new_post") %></h1>
        </div>
        <div class="card-body">
          <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true }, turbo: false do |f| %>
            <%= f.error_notification %>

            <div class="mb-3">
              <%= f.input :title,
                      input_html: {
                        class: "form-control",
                      },
                      label_html: {
                        class: "form-label",
                      },
                      label: t("posts.title") %>
            </div>
            <div class="mb-3">
              <%= f.input :body,
                      as: :text,
                      input_html: {
                        class: "form-control",
                        rows: 5,
                      },
                      label_html: {
                        class: "form-label",
                      },
                      label: t("posts.body") %>
            </div>
            <!-- Campo para adicionar tags -->
            <div class="mb-3">
              <%= f.input :new_tags,
                      label: "Tags",
                      input_html: {
                        class: "form-control",
                      },
                      placeholder: "Example: tag1" %>
            </div>
            <div class="mb-3">
              <%= f.button :submit, "Create Post", class: "btn-comment" %>
            </div>
            <%= f.file_field :file %>
            <%= form_with model: @post, local: true do |form| %>
            <% end %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
