<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card card-custom">
        <div class="card-header">
          <h2 class="text-center">Log in</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: 'form-control', autocomplete: "email" },
                          wrapper: false,
                          label_html: { class: 'form-label' } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { class: 'form-control', autocomplete: "current-password" },
                          wrapper: false,
                          label_html: { class: 'form-label' } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' } %>
              </div>
            <% end %>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
